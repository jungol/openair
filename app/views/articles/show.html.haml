- provide(:title, "Read Article")
%h1= @article.title
%h2= link_to "Cite", cite_article_path(@article)
%li.author
  AUTHORS
  - @article.authors.each do |author|
    = author.first_name
    = author.last_name

#contents
  Table of Contents
  -@article.sections.each do |section|
    %li.section_heading
      = link_to "#{section.heading}", anchor: "#{section.heading}"

%ul
  %li#abstract= "ABSTRACT: #{@article.abstract}"
  %li.section
    - @article.sections.each do |section|
      CONTENT
      %a{ id: "#{section.heading}"}
      = section.heading
      = section.content
  %li.cited_articles
    - @article.cited_articles.each do |citation|
      CITED ARTICLE
      = citation.title
  %li.citing_articles
    - @article.citing_articles.each do |citing|
      CITED BY
      = citing.title


